    <PreferenceCategory 
        android:title="Others"
        android:key="pref_key_others_settings">
         <CheckBoxPreference
	            android:key="pref_key_debug_mode"
	            android:summary="Show toast msgs and debug screen. Advanced users only!"
	            android:title="Debug Mode"
	            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="pref_key_notification"
            android:dependency="pref_key_debug_mode"
            android:summary="Comming soon!"
            android:title="Notifications"
            android:defaultValue="false" />
        <RingtonePreference 
	        android:key="pref_key_notif_selector"
	        android:dependency="pref_key_notification"
	        android:ringtoneType="notification"
	        android:summary="Comming soon!"
	        android:title="notification tone"/>	        
